# 数据库配置
DATABASE_URL=postgres://postgres:postgres@localhost:5432/app

# Redis 配置
REDIS_URL=redis://127.0.0.1/

# JWT 密钥（用于内部服务间认证）
JWT_SECRET=your-jwt-secret-key-change-in-production

# HMAC 签名密钥（用于 Python FastAPI 调用认证）
AUTH_SECRET=your-auth-secret-key-change-in-production

# 演示账号（可选，用于测试登录）
DEMO_USER=py-bot
DEMO_PASS=password

# Swagger 专用模式（设置为 true 时只启动文档服务，不连接数据库）
SWAGGER_ONLY=false

# WebSocket 服务端口
WS_PORT=8080

# HTTP API 服务端口
HTTP_PORT=8081
